---
---
[[{
  {% capture date %}{% assign y = site.data.MEDOCCUPANCY | size | minus: 1 %}{{ site.data.MEDOCCUPANCY[y][0] }}{% endcapture %} 
  "type": "Header.H2",
  "label": "截至 {{ date }} 的急症室及內科使用率"
}],[{  
  {% capture latestOccupancy %}{% assign y = site.data.MEDOCCUPANCY | size | minus: 1 %}{% assign x = site.data.MEDOCCUPANCY[0] | size | minus: 1 %}{{ site.data.MEDOCCUPANCY[y][x] }}{% endcapture %} 
  {% capture secondlatestOccupancy %}{% assign y = site.data.MEDOCCUPANCY | size | minus: 2 %}{% assign x = site.data.MEDOCCUPANCY[0] | size | minus: 1 %}{{ site.data.MEDOCCUPANCY[y][x] }}{% endcapture %}
  {% assign percent = latestOccupancy | minus: secondlatestOccupancy %}
  "type": "StatsCard",
  "label": "平均內科床位佔用率",
  "total": "{{ latestOccupancy }}",
  "movement": {{ percent }}
},{
  {% capture latestOccupancy %}{% assign y = site.data.AEDATTENDANCE | size | minus: 1 %}{% assign x = site.data.AEDATTENDANCE[0] | size | minus: 1 %}{{ site.data.AEDATTENDANCE[y][x]}}{% endcapture %} 
  {% capture secondlatestOccupancy %}{% assign y = site.data.AEDATTENDANCE | size | minus: 2 %}{% assign x = site.data.AEDATTENDANCE[0] | size | minus: 1 %}{{ site.data.AEDATTENDANCE[y][x]}}{% endcapture %}
  {% assign divisor = secondlatestOccupancy | times: 0.01 %}
  {% assign percent = latestOccupancy | minus: secondlatestOccupancy | divided_by: divisor | round: 1 %}
  "type": "StatsCard",
  "label": "經急症室求診人次",
  "total": "{{ latestOccupancy }}",
  "movement": {{ percent }}
},{
  {% capture latestOccupancy %}{% assign y = site.data.AEDADMISSION | size | minus: 1 %}{% assign x = site.data.AEDADMISSION[0] | size | minus: 1 %}{{ site.data.AEDADMISSION[y][x]}}{% endcapture %} 
  {% capture secondlatestOccupancy %}{% assign y = site.data.AEDADMISSION | size | minus: 2 %}{% assign x = site.data.AEDADMISSION[0] | size | minus: 1 %}{{ site.data.AEDADMISSION[y][x]}}{% endcapture %}
  {% assign divisor = secondlatestOccupancy | times: 0.01 %}
  {% assign percent = latestOccupancy | minus: secondlatestOccupancy | divided_by: divisor | round: 1 %}
  "type": "StatsCard",
  "label": "經急症室入院人次",
  "total": "{{ latestOccupancy }}",
  "movement": {{ percent }}
}],[{
  "type": "Header.H2",
  "label": "季節性流感強度水平 (MEM)"
}],[{
    {% assign values = "" %}
    {% for row in site.data.FLUEXPRESS %}
      {% if row[3].size > 0 %}
        {% assign values = values | append: " " | append: row[16] %}
      {% endif %}
    {% endfor %}
    {% assign values = values | split: " " %}
    {% assign divisor = values[-2] | times: 0.01 %}
    {% assign outbreaks = values[-1] %}
    {% assign outbreakMEM = "低" %}
    {% if outbreaks >= 155.18 %}
      {% assign outbreakMEM = "非常高" %}
    {% elsif outbreaks >= 97.62 %}
      {% assign outbreakMEM = "高" %}
    {% elsif outbreaks >= 34.20 %}
      {% assign outbreakMEM = "中等" %}
    {% endif %}
  "type": "StatsCard",
  "label": "流感樣疾病爆發個案",
  "total": "{{ outbreaks }}",
  "movement": {{ outbreaks | minus: values[-2] | divided_by: divisor | round: 1 }}
},{
  "type": "StatsCard",
  "label": "流感在社區的傳播性",
  "total": "{{ outbreakMEM }}"
},{
    {% assign values = "" %}
    {% for row in site.data.FLUEXPRESS %}
      {% if row[3].size > 0 %}
        {% assign values = values | append: " " | append: row[23] %}
      {% endif %}
    {% endfor %}
    {% assign values = values | split: " " %}
    {% assign divisor = values[-2] | times: 0.01 %}
    {% assign admissions = values[-1] %}
    {% assign admissionsMEM = "低" %}
    {% if admissions >= 2.54 %}
      {% assign admissionsMEM = "非常高" %}
    {% elsif admissions >= 1.59 %}
      {% assign admissionsMEM = "高" %}
    {% elsif admissions >= 0.55 %}
      {% assign admissionsMEM = "中等" %}
    {% endif %}
  "type": "StatsCard",
  "label": "公立醫院與流感相關的入院率",
  "total": "{{ admissions }}/每一萬人",
  "movement": {{ values[-1] | minus: values[-2] | divided_by: divisor | round: 1 }}
},{
  "type": "StatsCard",
  "label": "流感的嚴重程度",
  "total": "{{ admissionsMEM }}"
}]]
